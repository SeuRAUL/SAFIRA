<p id="notice"><%= notice %></p>

<section class="panel">
  <header class="panel__header">
    <span class="hide-mobile">
      <h2>Últimos lançamentos</h2> <h4>Saldo <%= current_user.cashier.opening_balance %></h4>
    </span>
    <div class="pull-right">
      <%= link_to 'LANÇAMENTO', new_cashier_release_path(current_user), :class => "btn--success" %>
    </div> 
  </header> 

  <table class="table">
    <tbody>

      <tr>
        <th>Tipo</th>
        <th>Descrição</th>
        <th>Forma de pagamento</th>
        <th>Data</th>
        <th>Número do documento</th>
        <th>Tipo do documento</th>
        <th>Propósito</th>
        <th>Valor</th>
        <th></th>
        <th></th>
      </tr>

    <% Release.where(view: true).limit(6).each do |r| %>
        <tr>
          
          <td><%= r.type_release %></td>
          <td><%= r.description %></td>
          <td><%= r.form_payment %></td>
          <td><%= post_date r.date_release %></td>
          <td><%= r.doc_number %></td>
          <td><%= r.doc_type %></td>
          <td><%= r.origin_destination %></td>
          <td><%= r.value %></td>
          <td><%= link_to "EDITAR", '/cashiers/'+r.cashier_id.to_s+'/releases/'+r.id.to_s+'/edit', :class => "btn" %></td>
          <td><%= link_to "EXCLUIR", [r.cashier, r], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %></td>
             
        </tr>
      <%end%>
     
    </tbody>
  </table>

</section>


