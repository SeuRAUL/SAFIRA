<%= form_for([@cashier, @release], :html => { :class => 'form' ,  :multipart => true }) do |f| %>

  <% if @release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
      <% @release.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



    <%= f.label "Valor" %>
    <%= f.text_field :value, :required => true, 'data-behaviour' => 'number_field' %>

    <%= f.label "Número do documento" %><br />
    <%= f.text_field :doc_number, :required => true, 'data-behaviour' => 'number_field' %>

    <%= f.label "Data da nota fiscal" %><br />
    <%= f.text_field :date_release, :required => true, 'data-behaviour' => 'datepicker' %>    
  
    <%= f.label "Descrição" %><br />
    <%= f.text_area :description, :required => true   %>

    <%= f.label "Forma de pagamento" %><br />
    <%= f.select :form_payment, options_for_select([["Cartao", "Cartao"], ["Cheque", "Cheque"], ["Dinheiro", "Dinheiro"]]), :required => true %>
    
    <%= f.label :doc_type %><br />
    <%= f.select :doc_type, options_for_select([["Tipo 1", "0"], ["Tipo 2", "1"], ["Tipo 3", "2"]]), :required => true, 'data-behaviour' => 'number_field' %>

    <%= f.label :origin_destination %><br />
    <%= f.text_field :origin_destination, :required => true, 'data-behaviour' => 'number_field' %>


    
    

    <br/><br/>



  <div class="form-actions">
      <center>
        <%= f.submit "Cadastrar", :class => "btn--success" %>
        <%= link_to "Cancelar", :back, :class => "btn--primary" %>
      </center>
    </div>

<% end %>